<!DOCTYPE html>
<head>
<title> Home </title>
<link rel="stylesheet" href="/chat.css">
<link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css'>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
<style>
.parent2 {
  display: grid;
  grid-template-columns: repeat(3, 30%);
  grid-template-rows: 85%;
  justify-content: center;
}

.card_child{
  width: 300px;
  height: 150px;
}

.alert{
  margin-left: 25%;
  width: 40%;
  justify-content: center;
  text-align: center;
}

</style>
</head>

<body>
  <div class="parent">
    <nav class="menu">
      <ul class="items">
        <a href="/"><li class="item">
          <i class="fa fa-home" aria-hidden="true"></i>
        </li></a>

        <a href="/search"><li class="item">
          <i class="fa fa-search" aria-hidden="true"></i>
        </li></a>

        <a href="/settings"><li class="item">
          <i class="fa fa-gear" aria-hidden="true"></i>
        </li></a>


        <a href="/logout"><li class="item">
          <i class="fa fa-sign-out" aria-hidden="true"></i>
        </li></a>
      </ul>
    </nav>
    <div class="container">
      <div class="row">
        <section class="chat">
            <% if (chat_usernames.length > 0) {%>
              <div class="parent2">
              <% for (const chatter of chat_usernames) {%>
                  <div class="col-mx-3 m-3 card_child">
                      <div class="card p-3 py-4">
                          <div class="text-center"> <img src="<%= chatter.profile_pic_url %>" width="100" class="rounded-circle"> </div>
                              <a href="/chat/<%= chatter.username %>" align="center" class="profile mt-2 mb-0"> @<%= chatter.username %> </a>
                              <br>
                      </div>
                  </div>
              <% } %>
              </div>
            <%} else {%>
              <div align="right" class="alert alert-primary my-3" role="alert">
                You have no chats. Use the search function <a href="/search" class="alert-link">here</a>.
              </div>
            <% } %>

        </section>
      </div>
    </div>
  </div>
</body>
